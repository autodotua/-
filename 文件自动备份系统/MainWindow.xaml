    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"   Height="5" Grid.ColumnSpan="2" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" />

        <ListView Foreground="Black" Name="lvwTasks"  ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="32" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="名称" Width="36" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="源目录" Width="200" DisplayMemberBinding="{Binding Path=OriginalDirectories}"/>
                    <GridViewColumn Header="目标目录" Width="200" DisplayMemberBinding="{Binding Path=a}"/>
                    <GridViewColumn Header="备份间隔（秒）" Width="108" DisplayMemberBinding="{Binding Path=a}"/>
                    <GridViewColumn Header="状态" Width="48" DisplayMemberBinding="{Binding Path=a}"/>
                    <GridViewColumn Header="下次备份时间" Width="144" DisplayMemberBinding="{Binding Path=a}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <TabControl  Grid.Row="2">
            <TabItem Header="当前日志">
                <TextBox x:Name="txtLogPanel" Grid.Row="2"   />
            </TabItem>
            <TabItem Header="所有日志"/>

        </TabControl>
    </Grid>
